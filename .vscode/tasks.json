{
    "tasks": [
        // make folder
        {
            "label": "create_dir",
            "command": "mkdir",
            "args": [
                "-p",
                "${fileDirname}/analysis"
            ],
            "group": "build",
            "detail": "0th step in build task.",
        },
        // cpp check
        {
            "label": "cpp_check",
            "command": "cppcheck",
            "args": [
                "--enable=all", // Enable all checks
                "--inconclusive", // Report inconclusive results
                "--force", // Check all configurations
                "--check-config",
                "--suppress=missingIncludeSystem", // Suppress missing system include warnings
                "--output-file=${fileDirname}/analysis/cpp_check.txt", // Output file
                "${file}" // Analyze the current file
            ],
            "group": "build",
            "detail": "1st step in build task.",
        },
        // gcc
        {
            "label": "gcc",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wno-unused-result",
                "-fdiagnostics-color=always",
                "-lm", // include math
                "-g", // help for debugger
                "${file}",
                "-o",
                "${fileDirname}/analysis/${fileBasenameNoExtension}.out"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "2nd step in build task."
        },
        // lizard
        {
            "label": "lizard",
            "command": "lizard",
            "args": [
                "-Eduplicate", // Code duplication check
                "-w", // Enable warnings
                "-L 50",
                "-T nloc=30",
                "-C 12",
                "-m",
                "${file}",
                "-H", // Generate HTML report
                "-o",
                "${fileDirname}/analysis/${fileBasenameNoExtension}.html"
            ],
            "group": "build",
            "detail": "3rd step in build task."
        },
        // valgrind
        {
            "label": "valgrind",
            "command": "valgrind",
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "--log-file=${fileDirname}/analysis/valgrind-out.txt",
                "${fileDirname}/analysis/${fileBasenameNoExtension}.out"
            ],
            "detail": "4th step in build task.",
            "group": "build",
        },
        // Build Controller
        {
            "label": "build",
            "dependsOn": [
                "create_dir",
                "cpp_check",
                "gcc",
                "lizard",
                "valgrind"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        // Debugging task
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/analysis/${fileBasenameNoExtension}.debug"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "dependsOn": "create_dir"
        }
    ],
    // Default settings
    "presentation": {
        "showReuseMessage": false,
        "panel": "shared"
    },
    "options": {
        "cwd": "${fileDirname}"
    },
    "type": "shell",
    "version": "2.0.0"
}