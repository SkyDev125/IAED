{
    "tasks": [
        // Make folder
        {
            "label": "create-analysis-dir",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${fileDirname}/analysis"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "0th step in build task.",
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
            }
        },
        // gcc
        {
            "label": "gcc",
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wno-unused-result",
                "-fdiagnostics-color=always",
                "-lm", // include math
                "-g", // help for debugger
                "${file}",
                "-o",
                "${fileDirname}/analysis/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "dependsOn": "create-analysis-dir",
            "detail": "1st step in build task.",
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
            }
        },
        // lizard
        {
            "label": "lizard",
            "type": "shell",
            "command": "lizard",
            "args": [
                "-Eduplicate", // Code duplication check
                "-w", // Enable warnings
                "${file}",
                "-H", // Generate HTML report
                "-o",
                "${fileDirname}/analysis/${fileBasenameNoExtension}.html"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": "gcc",
            "group": "build",
            "detail": "2nd step in build task.",
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
            }
        },
        // valgrind
        {
            "label": "valgrind",
            "type": "shell",
            "command": "valgrind",
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "--verbose",
                "--log-file=${fileDirname}/analysis/valgrind-out.txt",
                "${fileDirname}/analysis/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": "lizard",
            "detail": "3rd step in build task.",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "close": true,
            }
        }
    ],
    "version": "2.0.0"
}