// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
	"customizations": {
		"vscode": {
			"extensions": [
				"streetsidesoftware.code-spell-checker-british-english",
				"ms-vscode.cpptools",
				"xaver.clang-format",
				"twxs.cmake",
				"ms-vscode.cmake-tools",
				"formulahendry.code-runner",
				"streetsidesoftware.code-spell-checker",
				"Codium.codium",
				"naumovs.color-highlight",
				"joshbolduc.commitlint",
				"SeyyedKhandon.firacode",
				"mhutchie.git-graph",
				"donjayamanne.githistory",
				"github.vscode-github-actions",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"GitHub.vscode-pull-request-github",
				"codezombiech.gitignore",
				"eamodio.gitlens",
				"kisstkondoros.vscode-gutter-preview",
				"oderwat.indent-rainbow",
				"ms-vsliveshare.vsliveshare",
				"yzhang.markdown-all-in-one",
				"DavidAnson.vscode-markdownlint",
				"christian-kohler.path-intellisense",
				"streetsidesoftware.code-spell-checker-portuguese",
				"chrmarti.regex",
				"LouisWT.regexp-preview",
				"Gruntfuggly.todo-tree"
			]
		}
	},
	"workspaceFolder": "/workspaces/IAED",
	"postCreateCommand": {
		"update_apt": "sudo apt-get update"
	},
	"postStartCommand": {
		"install_clang_formatter": "apt-get install -y clang-format",
		"install_gdb": "apt-get install -y gdb",
		"install_valgrind": "apt-get install -y valgrind",
		"install_pip": "apt-get install -y  pip",
		"install_lizard": "pip install lizard",
		"install_jinja2": "pip install jinja2" 
	}
}